<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="300.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.testd.ui.view.NewConnectionView">
   <children>
      <Label text="New Connection From xxx">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
      <HBox spacing="10.0">
         <children>
            <Label text="Target Table:" />
            <ComboBox prefWidth="150.0" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="Connection Type:" />
             <RadioButton mnemonicParsing="false" text="left">
                 <toggleGroup>
                     <ToggleGroup fx:id="joinTypeGroup" />
                 </toggleGroup>
             </RadioButton>
             <RadioButton mnemonicParsing="false" text="right">
                 <toggleGroup>
                     <fx:reference source="joinTypeGroup" />
                 </toggleGroup>
             </RadioButton>
         </children>
      </HBox>
      <VBox>
         <children>
            <Label text="Select Part In Column Families:" />
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                  <VBox fx:id="colFamiliesSelectHboxes" spacing="3.0">
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
