<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.testd.ui.view.dynamic.ColFamilyInputMenu?>
<?import javafx.scene.control.Tooltip?>
<fx:root prefHeight="50.0" prefWidth="300.0"
         style="-fx-border-color: black; -fx-border-width: 2; -fx-border-style: dashed"
         type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
    <opaqueInsets>
        <Insets bottom="10.0" top="10.0" />
    </opaqueInsets>
    <left>
        <ColFamilyInputMenu fx:id="excludedColLabels"/>
    </left>
    <right>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="162.0"
              spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="Exclude cols">
                <tooltip>
                    <Tooltip text="cols that will not generate data to be autofilled by datasource, e.g. 'auto increment' in mysql"/>
                </tooltip>
            </Label>
        </HBox>
    </right>
</fx:root>
